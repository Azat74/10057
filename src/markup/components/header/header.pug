mixin header(data)
	+b.HEADER.header()&attributes(attributes)
		block
		div.main-header.main-header_standart
			div.menu-button
				div.menu-button__sandwich
					- for (var li = 0; li < 3; li++)
						div
			div.container
				div.country-container.country-container_original
					div.country-container__country-selector
						a(href='#') USA site
					div.country-container__country-selector
						a(href='#') Deutsch site
					div.country-container__language-container
						div.country-container__language-container__current-language Россия:&nbsp;
						a(href='#') Switch to english
				div.online-table-and-register-container.online-table-and-register-container_original
					div.online-table-and-register-container__online-table
						//- img(src="%=static=%img/content/clock.svg" width="20" height="20" alt="clock")
						div.clock-svg(style="background:url('%=static=%img/content/icons.svg')")
						a(href="#") Онлайн-табло
					div.online-table-and-register-container__register
						a(href="#") Вход и регистрация
				div.popup-close
					div
					div