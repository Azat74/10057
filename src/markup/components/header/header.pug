mixin header(data)
	+b.HEADER.header()&attributes(attributes)
		block
		div.main-header.main-header__standart
			div.menu-button
				div.menu-button__sandwich
					- for (var li = 0; li < 3; li++)
						div
			div.container
				div.main-header__country-switcher.main-header__country-switcher_color_blue
					div.main-header__country-element
						a(href='#') USA site
					div.main-header__country-element
						a(href='#') Deutsch site
					div.main-header__country-element
						div.main-header__language-current-element Россия:&nbsp;
						a(href='#') Switch to english
				div.main-header__online-table-and-register.main-header__online-table-and-register_color_blue
					div.main-header__online-table
						img(src="%=static=%img/content/clock.png" width="20" height="20" alt="clock")
						a(href="#") Онлайн-табло
					div.main-header__register
						a(href="#") Вход и регистрация
				div.main-header__close
					div
					div